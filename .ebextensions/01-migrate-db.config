container_commands:
  01_node_binary:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-* | head -1`/bin/node /bin/node"
    leader_only: true
  02_npm_binary:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-* | head -1`/bin/npm /bin/npm"
    leader_only: true
  03_migrate_db:
    command: "sudo RDS_HOST=${RDS_HOST} RDS_PORT=${RDS_PORT} RDS_NAME=${RDS_NAME} RDS_USER=${RDS_USER} RDS_PASSWORD=${RDS_PASSWORD} npm run db:migration:run"
    leader_only: true
